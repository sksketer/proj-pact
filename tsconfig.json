{
    "compilerOptions": {
        "target": "es2017", // Target ES2017 or higher
        "module": "es2022",
        "strict": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "moduleResolution": "node",
        "outDir": "dist",
        "sourceMap": true
    },
    "include": [
        "src/**/*" // Adjust the path to where your TypeScript files are
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}